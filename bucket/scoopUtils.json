{
    "version": "1.0",
    "url": "https://raw.githubusercontent.com/nophDog/Wserver/master/Scripts/Automation/ScoopUtils.ps1",
    "post_install": [
		"$scoopUtils = (Resolve-Path -Path $dir\\$fname).Path",
		"\"`n`n. $scoopUtils\" | Out-File -Path $profile -Append -Force"
    ],
    "uninstaller": {
		"script": 
			[
				"$installer = (Get-Content -Path $profile | Select-String -Pattern 'scoopUtils\\.ps1').Line",
				"Get-Content -Path $profile | Where-Object { $_ -ne $installer} | out-File -Path $profile",
				"Write-Host \"Script uninstalled successfully\""
			]
    }
    
}